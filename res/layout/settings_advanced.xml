<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/settingsLabel"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/advanced"
        android:textSize="40sp" />
    
    <View android:layout_width="fill_parent"
       android:layout_height="3dp"
       android:background="@android:color/black" />
    
    <View android:layout_width="fill_parent"
       android:layout_height="2dp"
       android:background="@android:color/black" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Backup Settings" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="This option will make a backup of all the settings (Nurses, Doctors/CNRAs, OR Rooms, Medications, etc) and keep it in the storage directory on the sdcard." />
    
    <Button android:id="@+id/backupdata"
	    android:text="@string/backupdata"
	    android:background="@drawable/button"
	    android:onClick="settingsOnClickBackupData"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right" />
    
    <View android:layout_width="fill_parent"
       android:layout_height="2dp"
       android:background="@android:color/black" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Restore Settings" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="This option will restore all the settings (Nurses, Doctors/CNRAs, OR Rooms, Medications, etc) from the backup on the sdcard.\n\nNote: this function will remove the existing settings as well as any transaction data." />
    
    <Button android:id="@+id/restoredata"
	    android:text="@string/restoredata"
	    android:background="@drawable/button"
	    android:onClick="settingsOnClickRestoreData"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right" />
    
    <View android:layout_width="fill_parent"
       android:layout_height="2dp"
       android:background="@android:color/black" />

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Clear Transaction Data"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Choosing this option will erase all of the transaction data, remove the current report, and unset the quantity for each medication.\n\nThe list of Medications, Doctors/CNRAs, Nurses will not be removed.\n\nThere is no undo for this operation." />
    
    <Button android:id="@+id/cleardata"
	    android:text="@string/cleardata"
	    android:background="@drawable/button"
	    android:onClick="settingsOnClickClearData"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right" />
    
</LinearLayout>
